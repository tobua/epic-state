{
  "name": "epic-state",
  "description": "Reactive state management for frontend libraries.",
  "version": "0.0.0-development",
  "repository": "github:tobua/epic-state",
  "homepage": "https://tobua.github.io/epic-state",
  "license": "CC-BY-NC-4.0",
  "author": "Matthias Giger",
  "contributors": [
    "Daishi Kato (valtio)"
  ],
  "scripts": {
    "build": "padua build",
    "start": "padua watch",
    "test": "vitest run --dir test"
  },
  "padua": {
    "entry": [
      "plugin/react.ts",
      "plugin/persist/browser.ts"
    ]
  },
  "dependencies": {
    "logua": "^3.0.2",
    "proxy-compare": "2.5.1",
    "use-sync-external-store": "1.2.0"
  },
  "devDependencies": {
    "@redux-devtools/extension": "^3.2.5",
    "@testing-library/react": "^14.0.0",
    "@types/jsdom": "^21.1.4",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@types/use-sync-external-store": "^0.0.5",
    "happy-dom": "^12.9.1",
    "jsdom": "^22.1.0",
    "json": "^11.0.0",
    "padua": "^2.0.6",
    "proxy-memoize": "^2.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-expect": "^1.3.0",
    "vitest": "0.34.6"
  },
  "peerDependencies": {
    "@types/react": ">= 18",
    "react": ">= 18"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/plugin/react.d.ts",
      "default": "./dist/plugin/react.js"
    },
    "./browser": {
      "types": "./dist/plugin/persist/browser.d.ts",
      "default": "./dist/plugin/persist/browser.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "state",
    "management",
    "frontend",
    "web",
    "store"
  ],
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs",
    "rules": {
      "no-plusplus": 0
    }
  },
  "publishConfig": {
    "provenance": true
  },
  "engines": {
    "node": ">= 18"
  }
}
