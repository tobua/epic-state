{
  "name": "epic-state",
  "description": "Reactive state management for frontend libraries.",
  "version": "0.0.0-development",
  "repository": "github:tobua/epic-state",
  "homepage": "https://tobua.github.io/epic-state",
  "license": "CC-BY-NC-4.0",
  "author": "Matthias Giger",
  "contributors": [
    "Daishi Kato (valtio)"
  ],
  "scripts": {
    "build": "padua build"
  },
  "padua": {
    "entry": [
      "plugin/preact.ts",
      "plugin/epic-jsx.ts",
      "plugin/persist/browser.ts"
    ],
    "tsconfig": {
      "compilerOptions": {
        "jsx": "react-jsx",
        "paths": {
          "react": [
            "./node_modules/epic-jsx"
          ],
          "react/jsx-dev-runtime": [
            "./node_modules/epic-jsx"
          ]
        }
      }
    }
  },
  "dependencies": {
    "logua": "^3.0.3",
    "proxy-compare": "^3.0.0"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^14.12.3",
    "@testing-library/preact": "^3.2.4",
    "@types/bun": "^1.1.6",
    "@types/jsdom": "^21.1.7",
    "@types/react": "^18.3.3",
    "epic-jsx": "^0.7.1",
    "padua": "^4.0.1",
    "preact": "^10.22.0"
  },
  "peerDependencies": {
    "epic-jsx": ">= 0.6",
    "preact": ">= 10"
  },
  "peerDependenciesMeta": {
    "epic-jsx": {
      "optional": true
    },
    "preact": {
      "optional": true
    }
  },
  "trustedDependencies": [
    "padua"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./connect": {
      "types": "./dist/plugin/epic-jsx.d.ts",
      "default": "./dist/plugin/epic-jsx.js"
    },
    "./preact": {
      "types": "./dist/plugin/preact.d.ts",
      "default": "./dist/plugin/preact.js"
    },
    "./browser": {
      "types": "./dist/plugin/persist/browser.d.ts",
      "default": "./dist/plugin/persist/browser.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "state",
    "management",
    "frontend",
    "web",
    "store"
  ],
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs",
    "rules": {
      "no-plusplus": 0,
      "no-underscore-dangle": 0
    }
  },
  "publishConfig": {
    "provenance": true
  },
  "engines": {
    "node": ">= 18"
  }
}
