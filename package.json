{
  "name": "epic-state",
  "description": "Reactive state management for frontend libraries.",
  "version": "0.0.0-development",
  "repository": "github:tobua/epic-state",
  "homepage": "https://tobua.github.io/epic-state",
  "license": "CC-BY-NC-4.0",
  "author": "Matthias Giger",
  "contributors": [
    "Daishi Kato (valtio)"
  ],
  "scripts": {
    "build": "padua build"
  },
  "padua": {
    "entry": [
      "plugin/preact.ts",
      "plugin/persist/browser.ts"
    ],
    "tsconfig": {
      "compilerOptions": {
        "jsxImportSource": "preact",
        "jsx": "react-jsx"
      }
    }
  },
  "dependencies": {
    "logua": "^3.0.3",
    "proxy-compare": "2.6.0"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^13.3.8",
    "@testing-library/preact": "^3.2.3",
    "@types/bun": "^1.0.6",
    "@types/jsdom": "^21.1.6",
    "padua": "^2.0.10",
    "preact": "^10.19.5"
  },
  "peerDependencies": {
    "preact": ">= 10"
  },
  "peerDependenciesMeta": {
    "preact": {
      "optional": true
    }
  },
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./preact": {
      "types": "./dist/plugin/preact.d.ts",
      "default": "./dist/plugin/preact.js"
    },
    "./browser": {
      "types": "./dist/plugin/persist/browser.d.ts",
      "default": "./dist/plugin/persist/browser.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "state",
    "management",
    "frontend",
    "web",
    "store"
  ],
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs",
    "rules": {
      "no-plusplus": 0,
      "no-underscore-dangle": 0
    }
  },
  "publishConfig": {
    "provenance": true
  },
  "engines": {
    "node": ">= 18"
  }
}
